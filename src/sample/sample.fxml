<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <padding><Insets bottom="40.0" left="40.0" right="40.0" top="40.0" /></padding>
    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="200.0">
        </ColumnConstraints>
        <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="150.0" prefWidth="200.0">
        </ColumnConstraints>
      <ColumnConstraints />
    </columnConstraints>
    <!-- Add Header Label -->
    <Label text="Data App" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>



    <!-- Add First Name Label -->
    <Label text="First Name : " GridPane.columnIndex="0" GridPane.rowIndex="1">
    </Label>
    <!-- Add First Name Text Field -->
    <TextField fx:id="FirstNameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="1" />


    <!-- Add Last Name Label -->
    <Label text="Last name : " GridPane.columnIndex="0" GridPane.rowIndex="2">
    </Label>
    <!-- Add Last Name Text Field -->
    <TextField fx:id="LastNameField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="2" />



    <!-- Add Email Label -->
    <Label text="Email : " GridPane.columnIndex="0" GridPane.rowIndex="3">
    </Label>
    <!-- Add Email Field -->
    <TextField fx:id="emailField" prefHeight="40" GridPane.columnIndex="1" GridPane.rowIndex="3" />


    <!-- Add Submit Button -->
    <Button fx:id="submitButton" defaultButton="true" onAction="#handleSubmitButtonAction" prefHeight="40" prefWidth="60" style="-fx-background-color: Lightgrey;" text="Submit" textFill="#4d4d4d" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4" GridPane.rowSpan="1" GridPane.valignment="TOP">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>

    <!-- Add Clear Button -->
    <Button fx:id="clearButton" defaultButton="true" onAction="#handleClearButtonAction" prefHeight="40" prefWidth="50" style="-fx-background-color: Lightgrey;" text="Clear" textFill="#4d4d4d" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="4" GridPane.rowSpan="1" GridPane.valignment="TOP">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
